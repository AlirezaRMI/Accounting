@using Application
@using Application.Helpers
@using Domain.Enum.Transeation
@model List<Domain.ViewModel.Transaction.TransactionViewModel>

<div class="text-center">
    <div class="col-md-12 stretch-card">
        <div class="card-body">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th class="pt-0">نوع تراکنش</th>
                                <th class="pt-0">تاریخ تراکنش</th>
                                <th class="pt-0">مبلغ تراکنش</th>
                                <th class="pt-0">توضیحات</th>
                                <th class="pt-0">دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @if (item.Type == TransactionType.Increase)
                                    {
                                        <td class="badge bg-success">واریز</td>
                                    }
                                    else
                                    {
                                        <td class="badge bg-danger">برداشت</td>
                                    }
                                    <td>@DateHelper.ToShamsi(item.Createdate)</td>
                                    <td>@item.Price.ToString("#,0") تومان</td>
                                    <td>@item.Description</td>
                                   
                                    <td>
                                        <a  class="btn btn-success btn-xs ">تایید</a>
                                        <button type="button" class="btn btn-warning btn-xs">ویرایش</button>
                                        <a asp-controller="Home" asp-action="DeleteTransaction" asp-route-id="@item.Id" type="button" class="btn btn-danger btn-xs">حذف</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>