@using Domain.ViewModel.Transaction
@using Domain.Enum.Transeation
@model TransactionViewModel

@{
    ViewBag.Title = "ویرایش تراکنش";
    Layout = "_Layout";
}


<form asp-action="EditTransaction" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>مبلغ</label>
        <input  asp-for="Price" value="@Model.Price" class="form-control" />
       
    </div>
    <span asp-validation-for="Price"></span>
    <div class="form-group">
        <label>توضیحات</label>
        <input asp-for="Description" value="@Model.Description" class="form-control"></input>
    </div>

    <div class="form-group">
        <label>نوع تراکنش</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<TransactionType>()"></select>
        <span asp-validation-for="Type"></span>
    </div>
 
    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</form>

